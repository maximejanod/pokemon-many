{% extends 'base.html.twig' %}

{% block body %}
<div id="superBloc">
    <div class="container blocHome">

        <div class="row">
            <div class="col-0 col-sm-0 col-md-0 col-lg-0 col-xl-0"></div>
    
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 diagrammeBloc">
                <h1>Inscription</h1>

                {{ form_start(form) }}
                
                <div class="form-group">
                        <label for="usr">Name</label>
                        <input type="text" class="form-control" id="usr">
                </div>
                
                {{ form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr':
                {'placeholder': 'Nom d\'utilisateur ...'}}) }}
                {{ form_row(form.email, {'label': 'Adresse email', 'attr':
                {'placeholder': 'Adresse email ...'}}) }}) }}
                {{ form_row(form.password, {'label': 'Mot de passe', 'attr':
                {'placeholder': 'Mot de passe !'}}) }}) }}
                {{ form_row(form.confirm_password, {'label': 'Répétez votre mot de passe', 'attr':
                {'placeholder': 'Répétez votre mot de passe'}}) }}) }}
            </div>
    
            <div class="col-0 col-sm-0 col-md-0 col-lg-0 col-xl-0"></div>
        </div>
        
    </div>

</div>
{% endblock %}